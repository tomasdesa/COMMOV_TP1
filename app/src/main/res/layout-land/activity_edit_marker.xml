<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProblema"
    android:background="@drawable/novo_gradient">


    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="85dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="326dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/Editarproblema"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/buttonLabel"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ApagarMarker"
        android:layout_width="71dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="332dp"
        android:background="@drawable/ic_baseline_delete_24"
        app:backgroundTint="@color/buttonLabel" />

    <EditText
        android:id="@+id/tituloedit"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="403dp"
        android:layout_marginRight="403dp"
        android:layout_marginBottom="265dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/insertTitulo"
        android:inputType="textAutoComplete"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/descricaoedit"
        android:layout_width="277dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="404dp"
        android:layout_marginRight="404dp"
        android:layout_marginBottom="193dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/insertDescricao"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/textView2edit"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="404dp"
        android:layout_marginRight="404dp"
        android:layout_marginBottom="142dp"
        android:text="@string/TipoProb"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner2edit"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="385dp"
        android:layout_marginRight="385dp"
        android:layout_marginBottom="61dp"
        android:background="@color/colorPrimary"
        android:entries="@array/tipoProb" />

    <Button
        android:id="@+id/guardar1edit"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginBottom="65dp"
        android:text="@string/guardar" />


</RelativeLayout>

